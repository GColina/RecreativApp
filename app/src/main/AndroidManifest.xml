<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>
    <application
        android:name="com.gcolina.recreativappcangreesl.RVApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecreativappCangreeSL">
        <activity
            android:name="com.gcolina.recreativappcangreesl.detail.DetailAssetActivity"
            android:exported="false" />
        <activity
            android:name="com.gcolina.recreativappcangreesl.addAssets.AddAssetsActivity"
            android:exported="false" />
        <activity
            android:name="com.gcolina.recreativappcangreesl.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gcolina.recreativappcangreesl.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.gcolina.recreativappcangreesl.home.HomeActivity"
            android:exported="true" />
    </application>

</manifest>