<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gcolina.recreativappcangreesl.detail.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAsset"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:background="@drawable/billar_random" />

        <!--                                               -->


        <TextView
            android:id="@+id/tvBarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvNameStore" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="@string/etBarName" />


        <TextView
            android:id="@+id/tvInstallationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvInstallationDate" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="130dp"
                android:layout_height="51dp"
                android:textSize="25sp"
                tools:text="21-11-2024" />

            <Button
                android:id="@+id/btnCalendar"
                android:layout_width="60dp"
                android:layout_height="51dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_calendar" />

            <Button
                android:id="@+id/btnNowCalendar"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:text="@string/btnNow" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvOwnerName" />

        <EditText
            android:id="@+id/etOwnerName"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="@string/tvOwnerName" />

        <TextView
            android:id="@+id/tvOwnerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvOwnerPhone" />

        <EditText
            android:id="@+id/etOwnerPhone"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="@string/tvOwnerPhone" />

        <TextView
            android:id="@+id/tvOwnerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/etOwnerEmail" />

        <EditText
            android:id="@+id/etOwnerEmail"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:autofillHints="true"
            android:hint="@string/etOwnerEmail" />

        <!--

         <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/categories" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategoriesMachines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
                -->

        <TextView
            android:id="@+id/tvearnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/etEarnings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/title_date_Earnings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/titleTotalEarnings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/titleNetEarnings" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEarnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


        <Button
            android:id="@+id/btnAddEarning"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/btnAddEarning" />

        <TextView
            android:id="@+id/tvTittleAlerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tv_tittle_alerts" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tvAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnAddAlerts"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/btnAddEarning" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:text="@string/btnAddEarning" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:text="@string/btnAddEarning" />

            <Button
                android:id="@+id/btnUnInstall"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:text="@string/btnAddEarning" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>